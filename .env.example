# Environment Configuration for Metronis

# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=metronis
DB_USER=metronis
DB_PASSWORD=metronis_dev_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_RELOAD=true
API_WORKERS=1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json
TRACING_ENABLED=false
JAEGER_ENDPOINT=

# Evaluation Configuration
TIER2_RISK_THRESHOLD=0.3
TIER3_RISK_THRESHOLD=0.7
TIER1_TIMEOUT=10
TIER2_TIMEOUT=30
TIER3_TIMEOUT=120
MAX_TRACES_PER_MINUTE=1000

# LLM API Keys (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Alert Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=